{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://voxeronai-tech.github.io/voxeron-architecture/schemas/domain/order_result.v0.6.json",
  "title": "OrderResult v0.6",
  "type": "object",
  "additionalProperties": false,
  "required": ["tenant_id", "session_id", "status"],
  "properties": {
    "tenant_id": { "type": "string", "minLength": 3 },
    "location_id": { "type": ["string", "null"] },
    "session_id": { "type": "string", "minLength": 6 },
    "status": { "type": "string", "enum": ["created", "pending_writeback", "failed"] },
    "order_id": { "type": ["string", "null"] },
    "provider": { "type": ["string", "null"] },
    "message": { "type": ["string", "null"] },
    "created_at": { "type": ["string", "null"], "format": "date-time" }
  }
}
