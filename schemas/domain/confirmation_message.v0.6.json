{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://voxeronai-tech.github.io/voxeron-architecture/schemas/domain/confirmation_message.v0.6.json",
  "title": "ConfirmationMessage v0.6",
  "type": "object",
  "additionalProperties": false,
  "required": ["tenant_id", "session_id", "channel", "to", "body"],
  "properties": {
    "tenant_id": { "type": "string", "minLength": 3 },
    "session_id": { "type": "string", "minLength": 6 },
    "channel": { "type": "string", "enum": ["sms", "whatsapp"] },
    "to": { "type": "string", "minLength": 3 },
    "body": { "type": "string", "minLength": 1, "maxLength": 1200 }
  }
}
