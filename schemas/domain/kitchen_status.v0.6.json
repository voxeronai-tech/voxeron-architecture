{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://voxeronai-tech.github.io/voxeron-architecture/schemas/domain/kitchen_status.v0.6.json",
  "title": "KitchenStatus v0.6",
  "type": "object",
  "additionalProperties": false,
  "required": ["tenant_id", "wait_time_min", "capacity_status", "updated_at"],
  "properties": {
    "tenant_id": { "type": "string", "minLength": 3 },
    "location_id": { "type": ["string", "null"] },
    "wait_time_min": { "type": "integer", "minimum": 0, "maximum": 240 },
    "capacity_status": { "type": "string", "enum": ["normal", "busy", "overloaded", "closed"] },
    "notes": { "type": ["string", "null"] },
    "blackout_items": { "type": "array", "items": { "type": "string" } },
    "updated_at": { "type": "string", "format": "date-time" }
  }
}
