{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://voxeronai-tech.github.io/voxeron-architecture/schemas/domain/menu.v0.6.json",
  "title": "Menu v0.6",
  "type": "object",
  "additionalProperties": false,
  "required": ["tenant_id", "currency", "items", "updated_at"],
  "properties": {
    "tenant_id": { "type": "string", "minLength": 3 },
    "location_id": { "type": ["string", "null"] },
    "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
    "items": {
      "type": "array",
      "minItems": 0,
      "items": { "$ref": "#/$defs/MenuItem" }
    },
    "updated_at": { "type": "string", "format": "date-time" }
  },
  "$defs": {
    "Money": {
      "type": "object",
      "additionalProperties": false,
      "required": ["amount", "currency"],
      "properties": {
        "amount": { "type": "number", "minimum": 0 },
        "currency": { "type": "string", "minLength": 3, "maxLength": 3 }
      }
    },
    "MenuItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["item_id", "name", "price", "available"],
      "properties": {
        "item_id": { "type": "string", "minLength": 2 },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": ["string", "null"] },
        "price": { "$ref": "#/$defs/Money" },
        "available": { "type": "boolean" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "allergens": { "type": "array", "items": { "type": "string" } },
        "category": { "type": ["string", "null"] }
      }
    }
  }
}
